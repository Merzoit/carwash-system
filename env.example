# Django настройки
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production-make-it-long-and-random
ALLOWED_HOSTS=*.railway.app,railway.app,your-custom-domain.com

# Railway specific
PORT=8000

# База данных
# Railway автоматически предоставляет PostgreSQL
# DATABASE_URL будет установлен автоматически Railway
# Для локальной разработки:
DATABASE_URL=sqlite:///db.sqlite3

# Для Railway (PostgreSQL) - будет установлен автоматически
# DATABASE_URL=postgresql://...

# Настройки PostgreSQL (для локального docker-compose)
POSTGRES_DB=carwash_db
POSTGRES_USER=carwash_user
POSTGRES_PASSWORD=carwash_password

# Другие настройки
TIME_ZONE=Europe/Moscow
LANGUAGE_CODE=ru-ru

